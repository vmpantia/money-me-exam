@model QuotationViewModel

@{
    ViewData["Title"] = "Apply Quotation";
}

@using (Html.BeginForm("SaveQuotation","Quotation", FormMethod.Post))
{
    <div class="row mb-3 form-group">
        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", placeholder ="Input Amount" } })
        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
    </div>

    <div class="row mb-3 form-group">
        @Html.LabelFor(model => model.Term, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.Term, new { htmlAttributes = new { @class = "form-control", placeholder ="Input Term" } })
        @Html.ValidationMessageFor(model => model.Term, "", new { @class = "text-danger" })
    </div>

    <div class="row mb-3 form-group">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "form-label" })
        @Html.DropDownListFor(model => model.Title, 
                                       new List<SelectListItem> {
                                           new SelectListItem { Text = "Mr.", Value = "Mr."},
                                           new SelectListItem { Text = "Ms.", Value = "Ms."},
                                           new SelectListItem { Text = "Mrs.", Value = "Mrs."}
                                       },
                                       "Select Title",
                                       new { @class = "form-select" })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>

    <div class="row mb-3 form-group">
        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder ="Input First Name" } })
        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
    </div>

    <div class="row mb-3 form-group">
        @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder ="Input Last Name" } })
        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
    </div>

    <div class="row mb-3 form-group">
        @Html.LabelFor(model => model.DateOfBirth, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
    </div>

    <div class="row mb-3 form-group">
        @Html.LabelFor(model => model.Mobile, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control", placeholder ="Input Mobile Number" } })
        @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
    </div>

    <div class="row mb-3 form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new {  @class = "form-control", type="email", placeholder ="Input Email Address" } })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
}

